<Window x:Class="PhoneStoreManagementSystem.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneStoreManagementSystem"
        mc:Ignorable="d"
        Title="Home"
        Height="600"
        Width="800">

    <!--Styles-->
    <Window.Resources>
        

        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3.5*" />
        </Grid.ColumnDefinitions>
        <Grid Name="dpLeftBar"
              Grid.Column="0"
              Background="#0085f3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <!--Left Sidebar-->
            <!--Top-->
            <Grid Grid.Row="0"
                  HorizontalAlignment="Center"
                  Width="{Binding ActualWidth, ElementName=dpLeftBar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                
                <Label  Style="{StaticResource sbarLabels}"
                        VerticalContentAlignment="Center"
                        
                        Grid.ColumnSpan="2"
                        Content="Temp"
                        Name="userNameDashboard" />
                <Label Style="{StaticResource sbarLabels}"
                       Content="Time"
                       Grid.Row="1"
                       Grid.Column="0" />
                <Label Style="{StaticResource sbarLabels}"
                       Content="00:00:00 AM"
                       Name ="time"
                       Grid.Row="1"
                       Grid.Column="1" />


            </Grid>
            <!--Mid-->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Width="{Binding ActualWidth, ElementName=dpLeftBar}">
                <Border BorderBrush="Black"
                        BorderThickness="1">
                    <Button Content="Phones"
                            Style="{StaticResource sbarButtons}"
                            Click="Phones" />
                </Border>
                <Border BorderBrush="Black"
                        BorderThickness="1">
                    <Button Content="Restock"
                            Style="{StaticResource sbarButtons}"
                            Click="Restock" />
                </Border>

                <Border BorderBrush="Black"
                        BorderThickness="1">

                    <Button Content="My Details"
                            Style="{StaticResource sbarButtons}"
                            Click="MyDetails" />
                </Border>
                
                <Border BorderBrush="Black"
                        BorderThickness="1">
                    <Button Content="Transaction Details"
                            Style="{StaticResource sbarButtons}"
                            Click="TransactionDetails" />
                </Border>

            </StackPanel>
            <StackPanel VerticalAlignment="Center"
                        Grid.Row="2">
                <Button  Style="{StaticResource sbarButtons}"
                         Height="50"
                         Click="Cart"
                         Width="50">Cart</Button>
            </StackPanel>
        </Grid>

        <!--Right Side-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition  Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Background="#0085f3" />
            <Label Foreground="White"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="25"
                   Name="pTitle">Phones</Label>
            <Frame NavigationUIVisibility="Hidden"
                   Grid.Row="1"
                   Background="LightGray"
                   Margin="5"
                   Name="Content_Box" />

        </Grid>
    </Grid>
</Window>
