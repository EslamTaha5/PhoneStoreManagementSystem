<Page x:Class="PhoneStoreManagementSystem.AddNewPhone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PhoneStoreManagementSystem"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AddNewPhone">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Brand"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     Name="BrandBox"
                     MaxHeight="60"
                     FontSize="30" />
        </Grid>

        <Grid Grid.Row="0"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Model"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     MaxHeight="60"
                     Name="ModelBox"
                     FontSize="30" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Name"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     MaxHeight="60"
                     Name="NameBox"
                     FontSize="30" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Ram"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     MaxHeight="60"
                     Name="RamBox"
                     PreviewKeyDown="DevicePreviewKeyDown"
                     DataObject.Pasting="DeviceBoxPasting"
                     PreviewTextInput="DevicePreviewTextInput"
                     FontSize="30" />
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Storage"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     MaxHeight="60"
                     Name="StorageBox"
                     PreviewKeyDown="DevicePreviewKeyDown"
                     DataObject.Pasting="DeviceBoxPasting"
                     PreviewTextInput="DevicePreviewTextInput"
                     FontSize="30" />
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label Content="Price"
                   Style="{StaticResource lStyle}" />
            <TextBox Grid.Column="1"
                     MaxHeight="60"
                     Name="PriceBox"
                     PreviewKeyDown="DevicePreviewKeyDown"
                     DataObject.Pasting="DeviceBoxPasting"
                     PreviewTextInput="DevicePreviewTextInput"
                     FontSize="30" />
        </Grid>
        <Button Grid.ColumnSpan="2"
                Grid.Row="3"
                Width="300"
                Click="AddDevice"
                Content="Add Device" />
    </Grid>
</Page>
