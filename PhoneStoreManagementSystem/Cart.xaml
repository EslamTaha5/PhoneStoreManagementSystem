<Page x:Class="PhoneStoreManagementSystem.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PhoneStoreManagementSystem"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Cart">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="auto" />
            
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <Label Content="Total : "
                       FontSize="30" />
                <Label Content="0"
                       Name="totalValue"
                       FontSize="30" />
            </StackPanel>
            <Button Grid.Column="1"
                    Content="Make Transaction"
                    Margin="30,0,30,0"
                    Click="makeTransaction" />
            <!-- Customer ID -->
            <Grid Grid.Row="1"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="Customer ID: "
                       FontSize="30" />

                <TextBox x:Name="customerID"
                         FontSize="30"
                         Width="300"
                         DataObject.Pasting="Customer_Pasting"
                         PreviewKeyDown="Customer_PreviewKeyDown"
                         PreviewTextInput="Customer_PreviewTextInput"
                         VerticalAlignment="Center"
                         Grid.Column="1" />
            </Grid>

            <!--Customer Name-->
            <Grid Grid.Row="1"
                  Grid.Column="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="Customer Name: "
                       FontSize="30" />

                <TextBox x:Name="customerName"
                         FontSize="30"
                         VerticalAlignment="Center"
                         Grid.Column="1"
                         Width="300"
                         HorizontalAlignment="Left" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="Customer Phone: "
                       FontSize="30" />

                <TextBox x:Name="customerPhone"
                         FontSize="30"
                         Width="250"
                         DataObject.Pasting="Customer_Pasting"
                         PreviewKeyDown="Customer_PreviewKeyDown"
                         PreviewTextInput="Customer_PreviewTextInput"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Grid.Column="1" />

            </Grid>

        </Grid>
        <ContentControl Grid.Row="1"
                        Name="Content_Box"
                        Margin="0,0,0,0">
        </ContentControl>
    </Grid>
</Page>
